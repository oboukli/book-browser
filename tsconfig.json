{
  "compilerOptions": {
    "alwaysStrict": false,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "outDir": "./dist",
    "pretty": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": false,
    "target": "es2018",
    "lib": ["es2018", "dom", "webworker"],
    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules", "**/*.spec.ts"]
}
